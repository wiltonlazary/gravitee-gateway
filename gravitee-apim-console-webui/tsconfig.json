{
  "compileOnSave": false,
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "incremental": true,
    "lib": ["dom", "es2018"],
    "noImplicitAny": false,
    "outDir": "dist-tsc",
    "removeComments": false,
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "ES2015",
    "types": ["jest", "angular-mocks", "node"],
    "resolveJsonModule": true,
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "checkJs": false,
    "module": "es2020"
  },
  "include": ["src/**/*.ts", "node_modules/@gravitee/ui-components"]
}
