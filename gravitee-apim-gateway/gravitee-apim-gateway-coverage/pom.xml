        <dependency>
            <groupId>io.gravitee.apim.gateway.security</groupId>
            <artifactId>gravitee-apim-gateway-security-core</artifactId>
            <version>${project.version}</version>
        </dependency>

        <dependency>
            <groupId>io.gravitee.apim.gateway.security</groupId>
            <artifactId>gravitee-apim-gateway-security-apikey</artifactId>
